<section>
  <h1>Item Detail</h1>

  <div>
    <h2>{{item.name}}</h2>
    <p><strong>ID:</strong> {{item.id}}</p>
    <p><strong>Description:</strong> {{item.description}}</p>
    <p><strong>Location:</strong> {{item.location}}</p>
    <p><strong>Date:</strong> {{item.date}}</p>
    <p><strong>Contact:</strong> {{item.contact}}</p>
    <p><strong>Status:</strong> {{item.status}}</p>
  </div>

  <div style="margin: 16px 0;">
    <img
      src="{{item.imagePath}}"
      alt="{{item.name}}"
      style="max-width: 100%; height: auto; border: 1px solid #ddd;"
    />
  </div>

  <div style="margin-top: 12px;">
    <p><strong>Update Status:</strong></p>
    <form
      method="POST"
      action="/items/{{item.id}}/status"
      style="display: inline;"
    >
      <input type="hidden" name="status" value="Lost" />
      <button type="submit">Mark Lost</button>
    </form>
    <form
      method="POST"
      action="/items/{{item.id}}/status"
      style="display: inline; margin-left: 6px;"
    >
      <input type="hidden" name="status" value="Found" />
      <button type="submit">Mark Found</button>
    </form>
    <form
      method="POST"
      action="/items/{{item.id}}/status"
      style="display: inline; margin-left: 6px;"
    >
      <input type="hidden" name="status" value="Closed" />
      <button type="submit">Close</button>
    </form>
  </div>

  <form
    method="POST"
    action="/items/{{item.id}}/delete"
    style="margin-top: 12px;"
  >
    <button type="submit" style="color: #b00020;">Delete Report</button>
  </form>
</section>